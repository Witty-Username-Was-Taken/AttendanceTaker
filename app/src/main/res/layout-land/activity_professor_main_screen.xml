<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BA0C2F"
    tools:context=".StudentMainScreenActivity">

    <Button
        android:id="@+id/professor_sign_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/sign_out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

    <Button
        android:id="@+id/professor_view_attendance_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="15dp"
        android:text="@string/view_attendance"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/professor_new_barcode_button"
        app:layout_constraintEnd_toStartOf="@+id/professor_current_barcodes_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/professor_new_barcode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="@string/new_barcode"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/professor_delete_barcode_button"
        app:layout_constraintEnd_toStartOf="@+id/professor_delete_barcode_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/professor_delete_barcode_button" />

    <Button
        android:id="@+id/professor_current_barcodes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="@string/current_barcodes"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/professor_view_attendance_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/professor_view_attendance_button"
        app:layout_constraintTop_toTopOf="@+id/professor_view_attendance_button" />

    <Button
        android:id="@+id/professor_delete_barcode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="72dp"
        android:padding="15dp"
        android:text="@string/delete_barcode"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/professor_sign_out_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/professor_new_barcode_button"
        app:layout_constraintTop_toBottomOf="@+id/professor_current_barcodes_button" />


</android.support.constraint.ConstraintLayout>